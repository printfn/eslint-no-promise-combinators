{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,

		"strict": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,

		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"outDir": "dist",
		"declaration": true,
        "declarationMap": true,
		"sourceMap": true,
		"lib": ["ESNext"],
	},
	"include": ["src/index.ts"]
}
